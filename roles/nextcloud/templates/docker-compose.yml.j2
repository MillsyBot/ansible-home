version: '2'

volumes:
  nextcloud:
  db:
  apps:
  config:

services:
  db:
    image: mariadb
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW
    restart: always
    volumes:
      - db:/var/lib/mysql
    environment:
      - MYSQL_ROOT_PASSWORD={{ MYSQL_ROOT_PASSWORD }}
      - MYSQL_PASSWORD={{ MYSQL_PASSWORD }}
      - MYSQL_DATABASE={{ MYSQL_DATABASE }}
      - MYSQL_USER={{ MYSQL_USER }}

  nextcloud:
    image: nextcloud
    restart: always
    links:
      - db
    volumes:
      - nextcloud:/var/www/html
      - apps:/var/www/html/custom_apps
      - config:/var/www/html/config/
      - /mnt/nfs/darkwindcraft:/var/www/html/data/files_external/darkwindcraft
    environment:
      - MYSQL_USER={{ MYSQL_USER }}    
      - MYSQL_PASSWORD={{ MYSQL_PASSWORD }}
      - MYSQL_DATABASE={{ MYSQL_DATABASE }}
      - MYSQL_HOST=db
      - NEXTCLOUD_ADMIN_USER={{ NEXTCLOUD_ADMIN_USER }}
      - NEXTCLOUD_ADMIN_PASSWORD={{ NEXTCLOUD_ADMIN_PASSWORD }}
      - NEXTCLOUD_TRUSTED_DOMAINS=nextcloud.packetpals.com\ nextcloud.darkwindcraft.com\ {{ ansible_default_ipv4.address }}

  ngnx:
    hostname: nginx
    image: nginx
    restart: always
    ports:
      - 80:80
    volumes:
      - /etc/docker/compose/nextcloud/nginx.conf:/etc/nginx/conf.d/default.conf
      - nextcloud:/var/www/html:ro
    links:
      - nextcloud
