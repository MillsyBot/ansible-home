[Unit]
Description=Minecraft route53 dyndns updater
After=network.target docker.service
Requires=docker.service

[Install]
WantedBy=multi-user.target

[Service]
ExecStartPre=/usr/bin/docker pull bshaw/route53-dyndns
# the - essentially ignores failure, it isn't made clear in the systemd manpage that
# this is the expected behavior, but it is. If this `-` prefixed command fails
# no other `ExecStartPre` commands will be executed, so we run the rm last.
ExecStartPre=-/usr/bin/docker rm -f minecraft-route53
ExecStart=/usr/bin/docker run \
                          --name minecraft-route53 \
                          -e AWS_ACCESS_KEY_ID={{ AWS_ACCESS_KEY_ID }} \
                          -e AWS_SECRET_ACCESS_KEY={{ AWS_SECRET_ACCESS_KEY }} \
                          -e AWS_CONNECTION_REGION=us-east-1 \
                          -e ROUTE53_DOMAIN_A_RECORD=minecraft.{{ PUBLIC_DOMAIN }}  \
                          -e ROUTE53_UPDATE_FREQUENCY=10800 \
                          bshaw/route53-dyndns

ExecStop=/usr/bin/docker stop unifi
# The rm of the container should be covered by the `--rm` flag
# in the run statement. However we want to make sure it's extra
# dead.
ExecStopPost=/usr/bin/docker rm -f minecraft-route53
Restart=always
RestartSec=10
